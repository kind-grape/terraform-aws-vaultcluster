{
  "variables": {
    "app_name": "consul-or-vault",
    "ssh_username": "ec2-user",
    "vault_version": "",
    "consul_version": "",
    "region": "",
    "vpc_id": "",
    "subnet_id": "",
    "source_ami_name": "",
    "source_ami_owner": "",
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "{{user `region`}}",
    "vpc_id": "{{ user `vpc_id`}}",
    "subnet_id": "{{ user `subnet_id`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "{{user `source_ami_name`}}",
        "root-device-type": "ebs"
      },
      "owners": ["{{user `source_ami_owner`}}"]
    },
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "{{ user `ssh_username` }}",
    "ami_name": "amz2-{{user `app_name`}}-ent-{{user `consul-or-vault_version`}}-{{timestamp}}",
    "tags": {
      "Name": "amz2-{{user `app_name`}}-ent-{{user `consul-or-vault_version`}}-{{timestamp}}"
    }
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
       "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
      ]
    },
    {
      "type": "file",
      "source": "./files/consul-enterprise_{{user `consul_version`}}+prem_linux_amd64.zip",
      "destination": "/tmp/consul-enterprise_{{user `consul_version`}}+prem_linux_amd64.zip"
    },
    {
      "type": "ansible",
      "playbook_file": "./install.yml",
      "extra_arguments": [
        "--extra-vars", "vault_version={{user `vault_version`}} consul_version={{user `consul_version`}} app={{user `app_name`}}"
      ],
      "ansible_env_vars": [
        "ANSIBLE_RETRY_FILES_ENABLED=no"
      ]
    }
  ]
}
